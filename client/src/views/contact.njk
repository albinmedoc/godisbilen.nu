{% extends "./_layout.njk" %}
{% block title %}
Kontakta oss
{% endblock title %}
{% block css %}
{{ super() }}
<link rel="stylesheet" href="../styles/contact.scss">
{% endblock css %}
{% block main %}
<section id="sub_header">
    <h3>Kontakta oss</h3>
    <p>Vi svarar snarast</p>
</section>
<form id="contact_form" class="responsive_form" method="POST">
    <div class="form_row">
        <div class="input_container">
            <input id="name" name="name" type="text" placeholder=" " required>
            <label for="name">Namn</label> 
        </div>
    </div>
    <div class="form_row">
        <div class="input_container">
            <input id="email" name="email" type="email" placeholder=" " required>
            <label for="email">Email</label> 
        </div>
    </div>
    <div class="form_row">
        <div class="input_container">
            <datalist id="subject">
                <option value="Angående order"></option>
                <option value="Fråga"></option>
            </datalist>
            <input list="subject" value="" name="subject" type="text" placeholder=" " required>
            <label for="subject">Ämne</label> 
        </div>
    </div>
    <div class="form_row">
        <div class="input_container">
            <input id="order_number" name="order_number" type="text" placeholder=" " required>
            <label for="order_number">Ordernummer</label> 
        </div>
    </div>
    <div class="form_row">
        <div class="input_container">
            <textarea class="" id="message" name="message" placeholder=" " required></textarea>
            <label for="message">Meddelande</label> 
        </div>
    </div>
    <div class="form_row">
        <div class="input_container">
            <input id="submit" name="submit" type="submit" value="Skicka">
        </div>
    </div>
    <div class="form_row">
        <div class="input_container">
            <p class="info">Genom att klicka på "Skicka" accepterar jag de <a href="/tos">allmänna villkoren</a> och <a href="/tos#gdpr">personuppgiftspolicyn</a>.</p>
        </div>
    </div>
</form>
{% endblock main %}